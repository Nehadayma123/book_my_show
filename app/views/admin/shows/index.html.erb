<%= stylesheet_link_tag "threatre_index"%>

<p style="color: green"><%= notice %></p>

<h1>Shows</h1>

<table>
 <thead>
    <tr>
      <th>Show_Date</th>
      <th>Show_Time</th>
      <th>Available Seats</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <tbody>
       <% @shows.each do |show| %>
       <tr>
        <td><%= show.show_time.strftime("%B %d, %Y")  %></td>
        <td><%= show.show_time.strftime(" %I:%M %p")  %></td>
        <td><%= show.available_seates%></td>
        <td><%= link_to "Show", admin_show_path(show), class: 'btn btn-primary' %></td>
        <td><%= link_to "Edit", edit_admin_show_path(show), class: 'btn btn-primary' %></td>
        <td><%= button_to "Destroy", admin_show_path(show), method: :delete, class: 'btn btn-primary' %></td>
      </tr>   
        <% end %>
  </tbody>
<br>
</table>



<% if can? :manage, Show %>
  <%= link_to 'New Show', new_admin_show_path, class: 'btn btn-primary' %>
<% end %>






