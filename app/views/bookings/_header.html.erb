
<%= stylesheet_link_tag "header"%>

  <header class="site-header">
        <div class="container">
            <div class="logo">
                 <%= image_tag("logo.png", {:style => "width:150px;height: 60px;"}) %>
            </div>
            <nav class="site-nav">
                <ul>
                    <li><a href="#home">Home</a></li>
                    <li><a href="#">Movies</a></li>
