                  </div>
                  <div>
                      <select name="post">
                      <option value=""></option>
                      <option value="1" selected="selected">Hi,Guest</option>
                      <%# <option value="2"><%= link_to "Movies", movie_path,%></option> %>
                      <option value="3"><%= link_to 'View history',bookings_booking_history_path %>
                      </option>
                      </select>
                  </div>
            </div>

        </div>
