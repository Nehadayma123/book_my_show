<%= stylesheet_link_tag "threatre_index"%>

<p style="color: green"><%= notice %></p>

<h1>Movies</h1>

<table>
 <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <tbody>
       <% @movies.each do |movie| %>
       <tr>
        <td><%= movie.title %></td>
        <td><%= movie.description%></td>
        <td><%= link_to "Show", movie, class: 'btn btn-primary' %></td>
        <td><%= link_to "Edit", edit_movie_path(movie), class: 'btn btn-primary' %></td>
        <td><%= button_to "Destroy", movie, method: :delete, class: 'btn btn-primary' %></td>
      </tr>   
        <% end %>
  </tbody>
<br>
</table>


<%= link_to 'New Movie', new_movie_path, class: 'btn btn-primary' %>






