<%= stylesheet_link_tag "threatre_index"%>

<p style="color: green"><%= notice %></p>

<h1>Shows</h1>

<table>
 <thead>
    <tr>
      <th>Show_Time</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <tbody>
       <% @shows.each do |show| %>
       <tr>
        <td><%= show.show_time %></td>
        <td><%= show.available_seates%></td>
        <td><%= link_to "Show", show, class: 'btn btn-primary' %></td>
        <td><%= link_to "Edit", edit_show_path(show), class: 'btn btn-primary' %></td>
        <td><%= button_to "Destroy", show, method: :delete, class: 'btn btn-primary' %></td>
      </tr>   
        <% end %>
  </tbody>
<br>
</table>


<%= link_to 'New Show', new_show_path, class: 'btn btn-primary' %>






